{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "./",
      "outDir": "./dist-server",
      "esModuleInterop": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "lib": ["DOM"],
    },
    "ts-node": {
      "swc": true
    },
    "exclude": [ "node_modules", "views"]
  }